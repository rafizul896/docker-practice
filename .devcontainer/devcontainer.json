{
  "name": "ts-container",
  "image": "node:20",
  "workspaceFolder": "/app",
  "mounts": [
    // bild mound
    "source=/d/Next Level-2.0/Cloud-Container-Craftsman/Docker/docker-with-typescript-backend,target=/app,type=bind",
    // named volume
    "source=ts-docker-logs,target=/app/logs,type=volume",
    // anonymous volume
    "target=/app/node_modules,type=volume"
  ],
  "runArgs": [
    "--name",
    "ts-container",
    "-p",
    "5001:5000",
    "--rm"
  ],
  "postCreateCommand": "npm install"
}
